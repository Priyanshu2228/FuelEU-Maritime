{
  "name": "FuelEU-Maritime-backend",
  "version": "1.0.0",
  "description": "Backend for FuelEU Maritime project",
  "main": "src/index.ts",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "start": "ts-node src/server.ts",
    "build": "tsc",
    "test": "npx prisma generate && jest --runInBand --coverage",
    "test:watch": "jest --watch",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev --name init_schema",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:reset": "npx prisma migrate reset --force",
    "setup": "npm install && npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@prisma/client": "^3.15.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jest": "^27.0.0",
    "supertest": "^6.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.11",
    "@types/jest": "^27.5.2",
    "@types/node": "^24.10.0",
    "@types/supertest": "^2.0.11",
    "@types/winston": "^2.4.4",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prisma": "^3.15.2",
    "tailwindcss": "^4.1.17",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
